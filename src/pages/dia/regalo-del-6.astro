---
import Layout from '@layouts/Layout.astro';
---

<Layout title=`Te amo feliz cumpleaños `>
    <a class='text-xl ml-7' href='/'>
        <img class='w-8 h-10 m-1' src='/svg/backArrow.svg' alt='back to home' />
    </a>
    <main class='flex flex-col justify-center items-center gap-4 my-16 mx-2'>
        <h1 class='text-3xl'>Te amo feliz cumpleaños</h1>
        <p class='text-lg italic w-5/6 text-center text-balance'>
            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Aspernatur
            laudantium maiores et nemo necessitatibus voluptas facilis quae at
            temporibus, libero odit nulla enim consectetur quis rem corrupti
            provident unde laboriosam!
        </p>
        <img
            class='lg:w-1/4 lg:h-1/4 h-3/2 w-3/4 rounded-md'
            src='/entrada.jpg'
            alt='entrada a voz veis'
        />
        <a
            class='text-lg bg-fuchsia-500 rounded-md p-2 hover:bg-fuchsia-700'
            '
            href='/concierto.pdf'
            download='/concierto.pdf'>Descargar archivo</a
        >
    </main>
</Layout>
